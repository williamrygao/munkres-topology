\usepackage[breakable,many]{tcolorbox}
% Math

\tcbset{one-sided-color/.style={
    breakable,
    enhanced,
    boxrule=0pt,
    frame hidden,
    borderline west={2pt}{0pt}{#1},
    colback=#1!10,
    coltitle=#1!200,
    after title={: },
    sharp corners,
    attach title to upper,
    }
}

\newtcolorbox[auto counter, number within=section]{theorem}{
    one-sided-color=my-yellow,
    title=\textbf{Theorem \thetcbcounter},
}

\newtcolorbox[use counter from=theorem]{definition}{
    one-sided-color=my-blue,
    title=\textbf{Definition \thetcbcounter},
}

\newtcolorbox[use counter from=theorem]{corollary}{
    one-sided-color=my-yellow,
    title=\textbf{Corollary \thetcbcounter},
}

\newtcolorbox[use counter from=theorem]{lemma}{
    one-sided-color=my-yellow,
    title=\textbf{Lemma \thetcbcounter},
}
